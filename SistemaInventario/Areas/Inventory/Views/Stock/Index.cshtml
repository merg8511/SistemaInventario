@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-6">
        <h2 class="text-primary">Stock de productos</h2>
    </div>
    <div class="col-lg-6">
        <a class="btn btn-outline-primary" asp-action="NewStock"><i class="bi bi-plus-square-fill"></i> Crear nuevo inventario</a>
        <a class="btn btn-outline-primary" asp-action="KardexProduct"><i class="bi bi-card-checklist"></i> Kardex</a>
    </div>
</div>
<br />
<div class="loader"></div>
<div class="p-4 border rounded bg-light">
    <table id="tbl-data" class="table table-responsive table-hover">
        <thead class="table-dark">
            <tr>
                <th>Bodega</th>
                <th>Producto</th>
                <th>Costo</th>
                <th>Cantidad</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/stock.js"></script>
}